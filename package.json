{
  "name": "navy-clock-systemd-restart",
  "description": "Navy Order to restart a Clock project once deployed (using systemd)",
  "version": "1.0.1",
  "repository": {
    "type": "git",
    "url": "git@github.com:clocklimited/navy-clock-systemd-restart"
  },
  "publishConfig": {
    "registry": "http://registry.npmjs.org"
  },
  "scripts": {
    "lint": "./node_modules/.bin/jshint . --reporter=./node_modules/jshint-full-path/index.js",
    "jscs": "./node_modules/.bin/jscs .",
    "pretest": "npm run-script lint && npm run-script jscs",
    "test": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- --recursive -R spec -r should",
    "posttest": "./node_modules/.bin/istanbul check-coverage && rm -rf coverage"
  },
  "dependencies": {
    "async": "^0.2.10"
  },
  "devDependencies": {
    "istanbul": "~0.2.3",
    "jscs": "~1.3",
    "jshint": "~2.4.1",
    "jshint-full-path": "~1.1.1",
    "mocha": "~1.17.0",
    "rewire": "^2.3.1",
    "should": "~3.0.1",
    "sinon": "^1.9.0"
  }
}
